# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=fishrc
pkgver=1.4.0
pkgrel=1
pkgdesc='Usable Fish shell configuration'
arch=('any')
url='https://github.com/pierres/fishrc'
license=('GPL-3.0-or-later')
depends=('fish' 'fish-tide')
makedepends=('git' 'just')
source=("git+https://github.com/pierres/fishrc.git#tag=${pkgver}")
sha256sums=('6b764897ef37ddd83c8d28e6bfb18e60d419c277073c577d1c6ee5d48d7ce8ec')

check() {
	cd ${srcdir}/${pkgname}

	just check
}

package() {
	cd ${srcdir}/${pkgname}

	just install "${pkgdir}"
}
