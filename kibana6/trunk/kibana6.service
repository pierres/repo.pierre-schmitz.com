[Unit]
Description=Kibana6 - dashboard for Elasticsearch
After=network.target elasticsearch6.service

[Service]
User=kibana
Group=kibana
Environment="NODE_ENV=production"
ExecStart=/usr/bin/node --max-old-space-size=512 /usr/share/kibana6/src/cli --config=/etc/kibana6/kibana.yml
PrivateTmp=true
NoNewPrivileges=true
Restart=always

[Install]
WantedBy=multi-user.target
