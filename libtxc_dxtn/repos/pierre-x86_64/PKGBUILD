# Maintainer: Jan "heftig" Steffens <jan.steffens@gmail.com>

pkgname=libtxc_dxtn
pkgver=1.0.0
pkgrel=1
arch=(i686 x86_64)
pkgdesc="Texture compression library for Mesa"
url="http://dri.freedesktop.org/wiki/S3TC"
license=(custom:BSD)
depends=(mesa)
makedepends=()
source=(http://cgit.freedesktop.org/~mareko/$pkgname/snapshot/$pkgname-$pkgver.tar.bz2)
md5sums=('ebee75ed669f6011e3998ba0c358d778')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install

  # License
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  sed -n '5,22{s|^ \* \?||;p}' txc_dxtn.h \
    > "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
