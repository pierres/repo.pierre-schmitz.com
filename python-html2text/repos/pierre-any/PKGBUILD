pkgname=python-html2text
pkgver=2.39
pkgrel=3
pkgdesc="Converts a page of HTML into clean, easy-to-read plain ASCII text."
arch=('any')
url="http://www.aaronsw.com/2002/html2text"
license=('GPL')
depends=('python2')
source=("html2text.py::http://www.aaronsw.com/2002/html2text/html2text-${pkgver}.py"
        setup.py)
md5sums=('f8045d268f215c6e26c17a4e69aeb837'
         '5c5081896652acda162115820b442111')

build() {
  /bin/true
}

package() {
  cd "$srcdir"
  python2 setup.py install --root="$pkgdir" --optimize=1
  find "$pkgdir" -name '*.py' -print0 |xargs -0 \
    sed -i -e 's,^#!/usr/bin/env python$,#!/usr/bin/env python2,' \
    -e 's,^#!/usr/bin/python$,#!/usr/bin/python2,'
}

